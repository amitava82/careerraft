{
    "middleware": ["apiRequest"],
    "routes": [
        {
            "path": "/api/institutes",
            "method": "get",
            "handler": "list",
            "middleware": []
        },
        {
            "path": "/api/institutes",
            "method": "post",
            "handler": "create",
            "middleware": ["ensureLoggedIn"]
        },
        {
            "path": "/api/institutes/:id",
            "method": "get",
            "handler": "get"
        },
        {
            "path": "/api/institutes/:id",
            "method": "put",
            "handler": "update"
        },
        {
            "path": "/api/institutes/:id/subjects",
            "method": "put",
            "handler": "addSubjects",
            "middleware": ["ensureLoggedIn"]
        },
        {
            "path": "/api/institutes/:id/categories",
            "method": "put",
            "handler": "addCategory",
            "middleware": ["ensureLoggedIn"]
        },
        {
            "path": "/api/institutes/:id/categories/:category",
            "method": "del",
            "handler": "deleteCategory",
            "middleware": ["ensureLoggedIn"]
        }
    ]
}