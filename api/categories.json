{
    "middleware": ["log"],
    "routes": [
        {
            "path": "/api/categories",
            "method": "post",
            "handler": "create",
            "middleware": ["ensureLoggedIn"]
        },
        {
            "path": "/api/categories",
            "method": "get",
            "handler": "list"
        },
        {
            "path": "/api/categories/:id",
            "method": "get",
            "handler": "get"
        },
        {
            "path": "/api/categories/:id",
            "method": "put",
            "handler": "update",
            "middleware": ["ensureLoggedIn"]
        },
        {
            "path": "/api/categories/:id",
            "method": "delete",
            "handler": "delete",
            "middleware": ["ensureLoggedIn"]
        }
    ]
}