<% layout('index') -%>
<div class="container password-reset">
    <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
            <p class="text-title text-center">Create an account</p>
            <p class="text-subhead">Please enter the details below and hit submit. We will send you an email with further instructions.</p>
            <% if (!data.success) { %>
            <p class="strong">All fields are required</p>
            <form action="/create-profile" method="post">
                <% if (data.error) { %>
                <div class="alert alert-danger"><%=data.error%></div>
                <% } %>
                <div class="form-group">
                    <label class="control-label">Profile type</label>
                    <div class="checkbox">
                        <label>
                            <input type="radio" name="kind" value="TUTOR"> I'm an individual Tutor
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="radio" name="kind" value="INST"> I run a training institute having one or more branches
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Name/institute name</label>
                    <input class="form-control" name="name" type="text" />
                </div>
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input class="form-control" name="email" type="email" />
                </div>
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input class="form-control" name="password" type="password" />
                    <input type="hidden" name="csrf" value=<%=data.code%> />
                </div>
                <div>
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </form>
            <% } %>
            <% if (data.success) { %>
            <div class="text-center">
                <i class="fa fa-check-circle text-success text-display-4"></i>
                <p class="text-title">Success!</p>
                <p>
                    Please check your email for account activation.
                </p>
            </div>
            <% } %>
        </div>
    </div>
</div>